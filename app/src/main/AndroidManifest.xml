<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mailclient.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mailclient.app.SendMailActivity"
            android:label=""
            android:parentActivityName="com.example.mailclient.app.MailClient" >
        </activity>
        <activity
            android:name="com.example.mailclient.app.ReplyActivity"
            android:label="" >
        </activity>
        <activity
            android:name="com.example.mailclient.app.MailClient"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:uiOptions="splitActionBarWhenNarrow"
            android:name="com.example.mailclient.app.ReadMail"
            android:label="@string/title_activity_read_mail" >
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

    </application>

</manifest>
